<Window x:Class="services.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Сервисная панель"
        WindowStyle="None"
        Background="transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Loaded="MainWindow_Loaded"
        MouseMove="Window_MouseMove"
        MouseLeave="Window_MouseLeave"
    > 

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480" /> <ColumnDefinition Width="20" /> </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#EE9E6E6F" Margin="0" CornerRadius="10,0,0,10">
            <StackPanel Margin="20">
                <TextBlock Text="Выберите функцию:" FontSize="18" Foreground="White"/>

                <Button Content="Открыть Блокнот" Margin="0,10,0,0"
                        Click="LaunchNotepad_Click"
                        Width="200" HorizontalAlignment="Left"/>

                <Button Content="Открыть Калькулятор" Margin="0,10,0,0"
                        Click="LaunchCalculator_Click"
                         Width="200" HorizontalAlignment="Left"/>

                 <Button Content="Выход" Margin="0,10,0,0"
                         Click="Exit_Click"
                         Width="200" HorizontalAlignment="Left"/>

            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="Brown" Opacity="0.3"/>

    </Grid>
</Window>
